<div class="columns is-mobile p-6">
  <div class="column is-three-fifths is-offset-one-fifth">
    <div class="signup">
      <div class="box">
        <p class="title center">
          Create Account
        </p>
        <p class="subtitle">
          新規アカウントの作成 
        </p>
      </div>
      <div class="fields box">
        <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
          <%= render 'shared/error_messages', model: f.object %>
          <%= render partial: 'shared/form', locals: { f: f }%>
          <div class="m-2">
          <label>
            <%= image_tag "登録アイコン.png", class: 'button is-link is-focused'%>
            <%= f.submit class:'is-hidden' %>
          </label>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
