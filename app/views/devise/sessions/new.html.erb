<div class="top">
  <nav class="navbar is-primary" role="navigation" aria-label="dropdown navigation">
      <div class="navbar-start navbar-item ">
            <strong>Qchat</strong>
      </div>
    </nav>
  <div class="signin">
    <div class="box mt-5 ml-5">
      <p class="title center">
        Log in
      </p>
      <p class="subtitle">
        登録しているユーザーでログイン 
      </p>
    </div>
    <div class="f box mt-5 ml-5">
    <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |f|%>
      <div class="field">
        <%= f.label :email%>
        <p class="control has-icons-left has-icons-right">
          <%= f.email_field :email, autofocus: true, class:"input is-primary", type:"email", placeholder:"Email"%>
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
          <span class="icon is-small is-right">
            <i class="fas fa-check"></i>
          </span>
        </p>
      </div>
      <div class="field">
        <%= f.label :password %>
        <p class="control has-icons-left">
          <%= f.password_field :password, autocomplete: "off", class:"input is-primary", type:"password", placeholder:"Password"%>
          <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
          </span>
        </p>
      </div>
      <%= f.submit "Log In", class:"button is-info is-rounded mt-5"%>
    <% end %>
    </div>
  </div>
</div>
