<div class="columns is-mobile p-6">
  <div class="column is-three-fifths is-offset-one-fifth">
    <div class="edit">
      <div class="box">
        <p class="title center">
          Edit Account
        </p>
        <p class="subtitle">
          アカウントの編集
        </p>
      </div>
      <div class="box">
        <%= form_with model: current_user, local: true do |f|%>
        <%= render 'shared/error_messages', model: f.object %>
        <div class="field">
          <%= f.label :name%>
          <p class="control has-icons-left has-icons-right">
            <%= f.text_field :name, autofocus: true, class:"input is-primary", type:"name", placeholder:"Name"%>
            <span class="icon is-small is-left">
              <i class="fas fa-check-square"></i>
            </span>
          </p>
        </div>
        <div class="field">
          <%= f.label :email%>
          <p class="control has-icons-left has-icons-right">
            <%= f.email_field :email, autofocus: true, class:"input is-primary", type:"email", placeholder:"Email"%>
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
            <span class="icon is-small is-right">
              <i class="fas fa-check"></i>
            </span>
          </p>
        </div>
        <div class="is-flex is-justify-content-left">
          <div class="field ">
            <%= f.label :イベント参加回数 %>
            <p class="control has-icons-left has-icons-right">
              <%= f.text_field :event_time, autofocus: true, class:"input is-primary", type:"name", placeholder:"例：10"%>
              <span class="icon is-small is-left">
                <i class="fas fa-check-square"></i>
              </span>
            </p>
          </div>
          <div class="field ml-5">
            <%= f.label :脱出成功回数 %>
            <p class="control has-icons-left has-icons-right">
              <%= f.text_field :clear_time, autofocus: true, class:"input is-primary", type:"name", placeholder:"例：5"%>
              <span class="icon is-small is-left">
                <i class="fas fa-check-square"></i>
              </span>
            </p>
          </div>
        </div>
        <%= f.submit "編集する", class:"button is-info is-rounded"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
