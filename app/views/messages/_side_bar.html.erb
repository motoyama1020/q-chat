<div class="column pl-3">
  <div class="user box">
  <% if user_signed_in? %>
    <%= link_to "#{current_user.name}のマイページ", user_path(current_user), class:'button is-primary is-focused m-2'%>
  <% else%>
    <%= link_to "ログイン", new_user_session_path, class:'button is-primary is-focused m-2' %>
    <%= link_to "新規アカウント登録", new_user_registration_path, class:'button is-link is-focused m-2' %>
  <% end %>
  <% if user_signed_in? %>
    <%= link_to "ルームを作成する", new_room_path, class:'button is-link is-focused m-2' %>
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'button is-success is-focused m-2'%>
  <% end %>
</div>
<article class="panel is-primary">
  <p class="panel-heading">
    チャットルーム一覧
  </p>
  <p class="panel-tabs"> 
    <a class="is-active">All</a>
    <a>東京</a>
    <a>神奈川</a>
    <a>大阪</a>
    <a>愛知</a>
  </p>
  <div class="panel-block">
    <%= form_with(url: search_rooms_path, local: true, method: :get, class: "control has-icons-left") do |form| %>
      <%= form.text_field :keyword, placeholder: "部屋を検索する", class: "input is-primary" %>
      <span class="icon is-left">
        <i class="fas fa-search" aria-hidden="true"></i>
      </span>
      <%= form.submit "検索", class: "button is-info is-rounded mt-3 ml-3" %>
    <% end %>


    <%= search_form_for @p, url: search_rooms_path do |f| %>
    <%= f.label :prefecture_name_eq, '場所' %>
    <%= f.collection_select :prefecture_name_eq, @rooms_name, :name, :name, include_blank: '指定なし' %>
    <br>
    <%= f.label :year_name_eq, '期間(年)' %>
    <%= f.collection_select :year_name_eq, @product_size, :name, :name, include_blank: '指定なし'%>
    <br>
    <%= f.label :month_name_eq, '期間(月)' %>
    <%= f.collection_select :month_name_eq, @product_status, :name, :name, include_blank: '指定なし'%>
    <br>
    <%= f.label :capacity_name_eq, '定員' %>
    <%= f.collection_select :capacity_name_eq, @category_name, :name, :name, include_blank: '指定なし' %>
    <br>
    <%= f.submit '検索' %>
    <br>
    <% end %>


  </div>


  <div class="rooms is-block">
    <% @rooms.each do |room| %>
      <div class="panel-block">
        <span class="panel-icon">
          <i class="fas fa-book" aria-hidden="true"></i>
        </span>
        <%= link_to room.name, room_messages_path(room) %>
      </div>
    <% end %>
  </div>
</article>
</div>
