<header class="navbar is-warning " role="navigation" aria-label="main navigation">
  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start navbar-item">
        <strong>room_name</strong>
    </div>
    <div class="navbar-item">
      <strong>何月何日の謎解き</strong>
    </div>
    <div class="navbar-end navbar-item">
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'button is-dark is-outlined mr-3'%>
      <a class="button is-dark is-outlined">
        <strong>chat_end</strong>
      </a>
    </div>
  </div>
</header>

<main class="mains">
  <div class="main mt-4">
    <%= render partial: 'message' %>
  </div>
</main>


<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>
